  <script>
    function moveNo() {
      const noButton = document.querySelector('.no');
      const randomX = Math.random() * 200 - 100; // D√©placement horizontal al√©atoire
      const randomY = Math.random() * 100 - 50;  // D√©placement vertical al√©atoire
      noButton.style.position = 'relative';
      noButton.style.transform = `translate(${randomX}px, ${randomY}px)`;
    }

    function showKakao() {
      // Masquer la carte de la question
      const questionCard = document.getElementById('question-card');
      questionCard.style.display = 'none';

      // Afficher le conteneur avec l'image, les c≈ìurs et le message romantique
      const kakaoContainer = document.getElementById('kakao-container');
      kakaoContainer.style.visibility = 'visible';

      // Ajouter des c≈ìurs anim√©s
      const heartsContainer = document.getElementById('hearts');
      for (let i = 0; i < 100; i++) {
        const heart = document.createElement('div');
        heart.classList.add('heart');
        heart.innerHTML = '‚ù§Ô∏è'; // Utilisation du c≈ìur emoji
        heart.style.left = `${Math.random() * 100}vw`;
        heart.style.top = `${Math.random() * 100}vh`;
        heart.style.animationDelay = `${Math.random() * 1}s`;
        heartsContainer.appendChild(heart);
      }
    }
  </script>
